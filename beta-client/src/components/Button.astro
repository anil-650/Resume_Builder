---
export interface Props {
name: string;
type: string;
classes?: string;
}

const { name, type, classes , ...rest} = Astro.props;
const default_classs=["text-white","font-bold","py-2","px-4","rounded","focus:outline-none","focus:ring"]

---
<div class="mb-4">
    <button
            class:list={[ classes, default_classs]}
            type={type}
            {...rest}>
        {name}
    </button>
</div>
