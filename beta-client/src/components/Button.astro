---
export interface Props {
name: string;
type: string;
color: string;
classes?: string;
}

const { name, type, classes , color, ...rest} = Astro.props;
const default_classs=["text-white","font-bold","py-2","px-4","rounded","focus:outline-none","focus:ring"]
---
<div class="mb-4">
    <button
            class:list={[classes, default_classs, `bg-${color}-500`]}
            type={type}
            {...rest}>
        {name}
    </button>
</div>
