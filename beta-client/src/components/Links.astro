---
import {Icon} from 'astro-icon'

export interface Props {
text: string;
href: string;
icon?: {
name: string;
side: "left" | "right";
};
isNav?: boolean;
isFilled?: boolean;
borderVisible?: boolean;
classes: string;
}

const {
text,
href,
icon,
name,
side,
isNav = false,
isFilled = true,
borderVisible = false,
classes,
...rest
} = Astro.props;

const navStyles = "text-xs md:text-base lg:text-2xl"
---

<a
href={href}
class:list={[ classes, { filled: isFilled, bordered: borderVisible } ]}
{...rest}
>

{ icon && icon.side === "left" && (
<Icon name={icon.name} height="24" width="24" />
)}

<span class:list={  isNav ? navStyles : null } >{text}</span>

{ icon && icon.side === "right" && (
<Icon name={icon.name} height="2rem" width="2rem" />
)}

</a>
